{
    "id": "org.freedesktop.Platform.Icontheme.Adwaita",
    "branch": "1.0",
    "runtime": "org.freedesktop.Sdk",
    "build-extension": true,
    "sdk": "org.freedesktop.Sdk",
    "runtime-version": "18.08",
    "separate-locales": false,
    "appstream-compose": false,
    "build-options" : {
        "prefix": "/usr/share/runtime"
    },
    "modules": [
        {
            "name": "adwaita-icon-theme",
            "cleanup": [
                "*.pc"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.gnome.org/sources/adwaita-icon-theme/3.36/adwaita-icon-theme-3.36.1.tar.xz",
                    "sha256": "e498518627044dfd7db7d79a5b3d437848caf1991ef4ef036a2d3a2ac2c1f14d"
                },
                {
                    "type": "patch",
                    "path": "dont-install-pkgconfig.patch"
                }
            ]
        },
        {
            "name": "metainfo",
            "buildsystem": "simple",
            "build-commands": [
                "mkdir -p ${FLATPAK_DEST}/share/metainfo",
                "cp org.freedesktop.Platform.Icontheme.Adwaita.metainfo.xml ${FLATPAK_DEST}/share/metainfo",
                "appstream-compose --basename=org.freedesktop.Platform.Icontheme.Adwaita --prefix=${FLATPAK_DEST} --origin=flatpak org.freedesktop.Platform.Icontheme.Adwaita"
            ],
            "sources": [
                {
                    "type": "file",
                    "path": "org.freedesktop.Platform.Icontheme.Adwaita.metainfo.xml"
                }
            ]
        }
    ]
}
